@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактор схемы</h2>

<div id="toolbox" style="float:left">
    <div>
        <div class="toolbox-btn">1</div>
        <div class="toolbox-btn">2</div>
    </div>
    <div>
        <div class="toolbox-btn">3</div>
        <div class="toolbox-btn">4</div>
    </div>
    <div>
        <div class="toolbox-btn">5</div>
        <div class="toolbox-btn">6</div>
    </div>
</div>
<div>
    <canvas id="scheme"></canvas>
</div>

<script type="text/javascript">
    $().ready(function() {
        $('#toolbox .toolbox-btn').click(function () {
            $(this).addClass('toolbox-btn-pressed');
        });
    });
</script>