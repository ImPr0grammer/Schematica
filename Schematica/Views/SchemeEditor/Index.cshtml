@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="/Scripts/Editor/wall-tool.js"></script>

<div style="margin-top:40px">
    <div id="toolbox" class="toolbox" style="float:left">
        <div style="margin-bottom:10px;font-size:14pt;color:black;font-weight: bold">
            Инструменты
        </div>
        <div>
            <div class="toolbox-btn" id="wall">1</div>
            <div class="toolbox-btn" id="door">2</div>
        </div>
        <div>
            <div class="toolbox-btn" id="pointInRoom">3</div>
            <div class="toolbox-btn" id="coordPoint">4</div>
        </div>
        <div>
            <div class="toolbox-btn" id="QRCode">5</div>
        </div>
    
        <div style="margin-top:50px">
            <div class="scheme-image">
                &darr; Изображение схемы
            </div>
        </div>
    </div>
<div>
    <canvas id="scheme" style="width:600px;height:400px;border:1px solid gray"></canvas>
</div>
    
</div>    

<script type="text/javascript">
    var _selectedInstrument = null;
    $().ready(function() {
        $('#toolbox .toolbox-btn').click(function () {
            $('#toolbox .toolbox-btn').attr('class', 'toolbox-btn');
            $(this).addClass('toolbox-btn-pressed');

            _selectedInstrument = $(this).attr('id');
        });
    });
</script>